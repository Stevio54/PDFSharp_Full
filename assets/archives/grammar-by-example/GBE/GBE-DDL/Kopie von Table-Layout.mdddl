            \\cell \{Text…\} \linebreak
            \\cell \{Text…\} \linebreak
          \} \linebreak
          \\row [KeepWith = 3] \linebreak
          \{ \linebreak
            \\cell \{Text…\} \linebreak
            \\cell \{Text…\} \linebreak
            \\cell \{Text…\} \linebreak
          \} \linebreak
          \\row \linebreak
          \{ \linebreak
            \\cell \{Text…\} \linebreak
            \\cell \{Text…\} \linebreak
            \\cell \{Text…\} \linebreak
          \} \linebreak
          \\row \linebreak
