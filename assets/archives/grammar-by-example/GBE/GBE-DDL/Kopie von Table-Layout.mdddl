          \} \linebreak
          \\row \linebreak
          \{ \linebreak
            \\cell \{Text…\} \linebreak
            \\cell \{Text…\} \linebreak
            \\cell \{Text…\} \linebreak
          \} \linebreak
        \} \linebreak
      \}
    }
    \paragraph [Style = "Comment"]
    {
      The cell is merged down by 1.
    }
    \table [Borders.Visible = true]
    {
      \columns [Width = 100]
      {
        \column
        \column
      }
      \rows [Height = 25]
      {
        \row
        {
          \cell [MergeDown = 1] {MergeDown = 1}
          \cell {Text…}
        }
        \row
        {
          \cell {Text…}
          \cell [MergeDown = 1] {MergeDown = 1}
        }
        \row
        {
          \cell {Text…}
          \cell {Text…}
        }
        \row
        {
          \cell {Text…}
          \cell {Text…}
        }
      }
    }
    \paragraph [Style = "Comment"]
    {
      The cell is merged down by 1.
    }

    // -------------------------------------------------------------------------
    \pagebreak
    \paragraph [Style = "Comment"]
    {
      \bold{MergeRight} and \bold{MergeDown}
    }
    \paragraph [Style = "DDL"]
    {
      \\table [Borders.Visible = true] \linebreak
      \{ \linebreak
        \\columns [Width = 100]\linebreak
        \{ \linebreak
          \\column \linebreak
