            \\cell \{Text…\} \linebreak
            \\cell \{Text…\} \linebreak
          \} \linebreak
          \\row \linebreak
          \{ \linebreak
            \\cell \{Text…\} \linebreak
            \\cell \{Text…\} \linebreak
            \\cell \{Text…\} \linebreak
          \} \linebreak
        \} \linebreak
      \}
    }
    \table [Borders.Visible = true]
    {
      \columns
      {
        \column
        \column
        \column
      }
      \rows [Height = 40]
      {
        \row
        {
          \cell {Text…}
          \cell {Text…}
          \cell {Text…}
        }
        \row
        {
          \cell {Text…}
