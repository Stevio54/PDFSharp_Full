\document
{
  \styles
  {
    Heading1
    {
      Font.Size = 13
      Font.Bold = true
      Font.Color = RGB(204,0,51)
      ParagraphFormat.SpaceBefore = 0
      ParagraphFormat.SpaceAfter = 12
      ParagraphFormat.KeepWithNext = true
    }
    
    Heading2
    {
      Font.Size = 11
      ParagraphFormat.SpaceBefore = 12
      ParagraphFormat.SpaceAfter = 6
      ParagraphFormat.KeepWithNext = true
    }

    Header {Font.Color = RGB(70,70,70)}
    
    Footer {Font.Color = RGB(70,70,70)}
    
    Comment : Normal
    {
      Font.Color = RGB(30,70,160)
      ParagraphFormat.SpaceBefore = 9
      ParagraphFormat.SpaceAfter = 6
    }
   
    DDL : Normal
    {
      Font.Name = "Lucida Console"
      Font.Size = 9
      Font.Color = RGB(30,70,160)
      ParagraphFormat.SpaceBefore = 6
      ParagraphFormat.SpaceAfter = 6
      ParagraphFormat.Shading.Color = GRAY(5)
      ParagraphFormat.KeepTogether = true
    }
  }

  \section [PageSetup.StartingNumber = 1]
  {
    \header
    {
      Table - Layout - Horizontal Alignment
    }
    \footer [Format.Alignment = Center]
    {
      Section \field(Section) \symbol(Bullet) Page \field(Page) of \field(SectionPages)
    }
   
    // -------------------------------------------------------------------------
    \paragraph [Style = "Heading1"]
    {
      Horizontal Alignment
    }
    \paragraph [Style = "Comment"]
    {
     A table can be aligned horizontally.
    }
    \paragraph [Style = "Heading2"]
    {
      Left Aligned
    }
    \paragraph [Style = "Comment"]
    {
      By default, the text of the first column is left aligned to the page margin.
      This looks best if the table has no borders.
    }
    \paragraph [Style = "DDL"]
    {
      \\rows [Alignment = Left]
    }
    \table [Borders.Width = 1.25 Format.Font.Size = 8]
    {
      \columns
      {
        \column
        \column
      }
      \rows [Alignment = Left]
      {
        \row
        {
          \cell {Text…}
          \cell {Text…}
        }
        \row
        {
          \cell {Text…}
          \cell {Text…}
        }
        \row
        {
          \cell {Text…}
          \cell {Text…}
        }
      }
    }
    \paragraph [Style = "Comment"]
    {
      This can be adjusted with a left indent.
    }
    \paragraph [Style = "DDL"]
    {
      \\rows [Alignment = Left LeftIndent = "0cm"]
    }
    \table [Borders.Width = 1.25 Format.Font.Size = 8]
    {
      \columns
      {
        \column
        \column
      }
      \rows [Alignment = Left LeftIndent = "0cm"]
      {
        \row
        {
          \cell {Text…}
          \cell {Text…}
        }
        \row
        {
          \cell {Text…}
          \cell {Text…}
        }
        \row
        {
          \cell {Text…}
          \cell {Text…}
        }
      }
    }
    \paragraph [Style = "Comment"]
    {
      Left indent can be negative.
    }
    \paragraph [Style = "DDL"]
    {
      \\rows [Alignment = Left LeftIndent = "-5mm"]
    }
    \table [Borders.Width = 1.25 Format.Font.Size = 8]
    {
      \columns
      {
        \column
        \column
      }
      \rows [Alignment = Left LeftIndent = "-5mm"]
      {
        \row
        {
          \cell {Text…}
          \cell {Text…}
        }
        \row
        {
          \cell {Text…}
          \cell {Text…}
        }
        \row
        {
          \cell {Text…}
          \cell {Text…}
        }
      }
    }
    \paragraph [Style = "Heading2"]
    {
      Centered
    }
    \paragraph [Style = "DDL"]
    {
      \\rows [Alignment = center]
    }
    \table [Borders.Width = 1.25 Format.Font.Size = 8]
    {
      \columns
      {
        \column
        \column
      }
      \rows [Alignment = center]
      {
        \row
        {
          \cell {Text…}
          \cell {Text…}
        }
        \row
        {
          \cell {Text…}
          \cell {Text…}
        }
        \row
        {
          \cell {Text…}
          \cell {Text…}
        }
      }
    }
    \paragraph [Style = "Heading2"]
    {
      Right Aligned
    }
    \paragraph [Style = "DDL"]
    {
      \\rows [Alignment = Right]
    }
    \table [Borders.Width = 1.25 Format.Font.Size = 8]
    {
      \columns
      {
        \column
        \column
      }
      \rows [Alignment = Right]
      {
        \row
        {
          \cell {Text…}
          \cell {Text…}
        }
        \row
        {
          \cell {Text…}
          \cell {Text…}
        }
        \row
        {
          \cell {Text…}
          \cell {Text…}
        }
      }
    }
